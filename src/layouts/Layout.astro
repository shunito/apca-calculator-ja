---
export interface Props {
  title: string;
}

import GoogleFont from "../components/GoogleFont.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="stylesheet" href="/styles/global.css" />
    <!-- Google Tag Manager -->
    <script is:inline>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        j.async = true;
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", "GTM-KDJRBW2");
    </script>
    <!-- End Google Tag Manager -->

    <GoogleFont />
  </head>
  <body>
    <Header title={title} />
    <slot />
    <Footer />
    <style is:global>
      @layer i18n {
        html[lang="ja"] {
          --font-family: system-ui, -apple-system, "Segoe UI", "Roboto",
            "Ubuntu", "Cantarell", "Noto Sans JP", "Hiragino Kaku Gothic ProN",
            Meiryo, sans-serif, "Apple Color Emoji", "Segoe UI Emoji",
            "Segoe UI Symbol", "Noto Color Emoji";
          line-height: 1.8;
        }

        [lang="en"] {
          --font-family: "Arial", "Helvetica Neue", "Helvetica" system-ui,
            -apple-system, "Segoe UI", "Roboto", "Ubuntu", "Cantarell",
            sans-serif;
          line-height: 1.6;
        }
      }

      @layer utilities.a11y {
        :root:not([data-theme="light"]) {
          --primary: rgb(54, 163, 199);
          --primary-hover: rgb(117, 173, 192);
          --primary-focus: rgba(92, 92, 92, 0.25);
          --muted-color: rgb(140, 155, 165);
        }

        :root:not([data-theme="light"]) a.secondary {
          color: rgb(129, 171, 198);
        }

        :root:not([data-theme="dark"]) {
          --primary: hsl(195deg, 90%, 32%);
          --primary-hover: hsl(195deg 94% 22%);
          --muted-color: hsl(205deg 17% 44%);
        }

        .sample-box:focus,
        select:focus,
        textarea:focus,
        input:focus,
        textarea:focus,
        button:focus {
          outline: rgb(54, 163, 199, 0.5) solid 3px;
        }

        :root:not([data-theme="light"]) .sample-box:focus,
        :root:not([data-theme="light"]) select:focus,
        :root:not([data-theme="light"]) textarea:focus,
        :root:not([data-theme="light"]) input:focus,
        :root:not([data-theme="light"]) textarea:focus,
        :root:not([data-theme="light"]) button:focus {
          outline: rgba(168, 184, 190, 0.8) solid 3px;
        }

        .visually-hidden {
          clip: rect(0 0 0 0);
          clip-path: inset(50%);
          height: 1px;
          overflow: hidden;
          position: absolute;
          white-space: nowrap;
          width: 1px;
        }
      }

      .page-title {
        margin: 0;
      }
    </style>
  </body>
</html>
