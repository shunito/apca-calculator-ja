---
import { fontList } from "../conf/fonts.json";

const googlefontUrl = "https://fonts.googleapis.com/css2";
const list = fontList.filter((font) => font.webFont === true);

const fontHrefList = list.map(
  (font: { name: string; wght: string }) =>
    `${googlefontUrl}?family=${font.name}:wght@${font.wght}&display=swap`
);
---

<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

{fontHrefList.map((href: string) => <link href={href} rel="stylesheet" />)}
